<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="@dimen/switch_ring" android:height="@dimen/switch_ring"/>
            <stroke android:width="4dp" android:color="@color/gray_100" />
            <padding
                android:left="@dimen/switch_thumb_ring_padding"
                android:right="@dimen/switch_thumb_ring_padding"
                android:top="@dimen/switch_thumb_ring_padding"
                android:bottom="@dimen/switch_thumb_ring_padding"/>
        </shape>
    </item>

    <item
        android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="@dimen/switch_ring" android:height="@dimen/switch_ring"/>
            <stroke android:width="4dp" android:color="@color/blue_200" />
            <padding
                android:left="@dimen/switch_thumb_ring_padding"
                android:right="@dimen/switch_thumb_ring_padding"
                android:top="@dimen/switch_thumb_ring_padding"
                android:bottom="@dimen/switch_thumb_ring_padding"/>
        </shape>
    </item>
</selector>